# ============================================
# Content Creation Crew - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control
#
# Usage:
#   cp .env.example .env
#   # Edit .env with your actual values
# ============================================

# ============================================
# REQUIRED - Application Configuration
# ============================================

# Environment: dev, staging, or prod
ENV=dev

# Secret key for JWT tokens and session encryption (MINIMUM 32 characters)
# Generate a secure key: openssl rand -hex 32
# NEVER use default values in production!
SECRET_KEY=your-secret-key-min-32-characters-long-change-this-in-production

# ============================================
# REQUIRED - Database Configuration
# ============================================

# PostgreSQL connection string (required for all environments)
# Format: postgresql://[user]:[password]@[host]:[port]/[database]
DATABASE_URL=postgresql://user:password@localhost:5432/content_crew

# ============================================
# REQUIRED - LLM Service Configuration
# ============================================

# Ollama base URL (local or remote)
OLLAMA_BASE_URL=http://localhost:11434

# ============================================
# OPTIONAL - Cache Configuration
# ============================================

# Redis connection URL (uses in-memory cache if not set)
# Format: redis://[password@][host]:[port]/[database]
REDIS_URL=redis://localhost:6379/0

# ============================================
# OPTIONAL - Server Configuration
# ============================================

# Server port (default: 8000)
PORT=8000

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# CrewAI execution timeout in seconds (default: 300 = 5 minutes)
CREWAI_TIMEOUT=300

# ============================================
# OPTIONAL - Frontend URLs
# ============================================

# Frontend OAuth callback URL
FRONTEND_CALLBACK_URL=http://localhost:3000/auth/callback

# Backend API base URL (used for OAuth redirects)
API_BASE_URL=http://localhost:8000

# CORS allowed origins (comma-separated)
# In production, use HTTPS URLs only
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================
# OPTIONAL - OAuth Providers
# ============================================

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Facebook OAuth
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ============================================
# OPTIONAL - Payment Providers (Stripe)
# ============================================

# Stripe Production Keys
STRIPE_SECRET_KEY=
STRIPE_PUBLIC_KEY=
STRIPE_WEBHOOK_SECRET=

# Stripe Test Keys (for development/staging)
STRIPE_TEST_SECRET_KEY=
STRIPE_TEST_PUBLIC_KEY=
STRIPE_TEST_WEBHOOK_SECRET=

# ============================================
# OPTIONAL - Payment Providers (Paystack)
# ============================================

# Paystack Production Keys
PAYSTACK_SECRET_KEY=
PAYSTACK_PUBLIC_KEY=
PAYSTACK_WEBHOOK_SECRET=

# Paystack Test Keys (for development/staging)
PAYSTACK_TEST_SECRET_KEY=
PAYSTACK_TEST_PUBLIC_KEY=
PAYSTACK_TEST_WEBHOOK_SECRET=

# ============================================
# OPTIONAL - Bank Transfer Configuration
# ============================================

BANK_ACCOUNT_NUMBER=
BANK_NAME=
BANK_ACCOUNT_NAME=
BANK_ROUTING_NUMBER=

# ============================================
# OPTIONAL - Storage Configuration
# ============================================

# Storage provider: "local" or "s3"
STORAGE_PROVIDER=local

# Local storage path (used when STORAGE_PROVIDER=local)
STORAGE_PATH=./storage

# S3-compatible storage (used when STORAGE_PROVIDER=s3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=
S3_ENDPOINT_URL=
# For AWS S3, leave S3_ENDPOINT_URL empty
# For MinIO or other S3-compatible services, set the endpoint URL

# ============================================
# OPTIONAL - TTS (Text-to-Speech) Configuration
# ============================================

# TTS provider: "piper" (default) or "coqui"
TTS_PROVIDER=piper

# Enable Coqui XTTS v2 (requires TTS_PROVIDER=coqui)
ENABLE_COQUI_TTS=false

# Piper TTS model path (default: models/piper)
PIPER_MODEL_PATH=models/piper

# Piper binary path (default: "piper" - must be in PATH)
PIPER_BINARY=piper

# ============================================
# OPTIONAL - Video Rendering Configuration
# ============================================

# Enable AI video generation via ComfyUI (requires GPU)
ENABLE_AI_VIDEO=false

# ComfyUI API URL (used when ENABLE_AI_VIDEO=true)
COMFYUI_API_URL=http://localhost:8188

# ============================================
# OPTIONAL - Build Metadata (set by CI/CD)
# ============================================

BUILD_VERSION=dev
BUILD_COMMIT=unknown
BUILD_TIME=

# ============================================
# OPTIONAL - Frontend Environment Variables
# ============================================
# These are used by the Next.js frontend
# Set them in web-ui/.env.local or as build-time variables

# Backend API URL (required for frontend)
NEXT_PUBLIC_API_URL=http://localhost:8000

# OAuth provider client IDs (public, safe to expose)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=
NEXT_PUBLIC_FACEBOOK_CLIENT_ID=
NEXT_PUBLIC_GITHUB_CLIENT_ID=

# ============================================
# OPTIONAL - Email Configuration (for contact form)
# ============================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# ============================================
# NOTES
# ============================================
#
# 1. SECRET_KEY: MUST be changed in production!
#    Generate with: openssl rand -hex 32
#
# 2. DATABASE_URL: PostgreSQL is required. SQLite is not supported.
#
# 3. In production (ENV=prod):
#    - SECRET_KEY must be set and >= 32 characters
#    - FRONTEND_CALLBACK_URL must use HTTPS
#    - API_BASE_URL must use HTTPS
#    - CORS_ORIGINS must include HTTPS origins
#    - Payment webhook secrets are required if payment providers are configured
#
# 4. For Docker Compose:
#    - Set variables in .env file or pass via environment
#    - SECRET_KEY is required (no default fallback)
#
# 5. For Railway/Heroku/etc:
#    - Set all required variables in platform'"'"'s environment variable settings
#    - Never commit .env files to version control
#
# ============================================
