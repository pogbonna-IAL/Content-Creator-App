# Content Creation Crew - Environment Variables Example
# Copy this file to .env and fill in your values
# DO NOT commit .env file with real secrets to version control

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
# Environment: dev, staging, or prod
# In staging/prod, strict validation is enforced
ENV=dev

# =============================================================================
# REQUIRED VARIABLES (All Environments)
# =============================================================================

# Secret key for JWT token signing (minimum 32 characters)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production-min-32-chars

# Database connection URL
# Development: SQLite (default)
# Production: PostgreSQL (required)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=sqlite:///./content_crew.db

# Ollama LLM runtime URL
# Development: http://localhost:11434
# Production: https://ollama.yourdomain.com:11434 or managed service URL
OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# OPTIONAL VARIABLES (Recommended)
# =============================================================================

# Redis cache URL (optional - in-memory cache used if not set)
# Format: redis://user:password@host:port/db
# REDIS_URL=redis://localhost:6379/0

# Server port (default: 8000)
# Railway/cloud platforms usually set this automatically
PORT=8000

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# FRONTEND URLS
# =============================================================================

# Frontend OAuth callback URL
# Development: http://localhost:3000/auth/callback
# Production: https://yourdomain.com/auth/callback
FRONTEND_CALLBACK_URL=http://localhost:3000/auth/callback

# Backend API base URL
# Development: http://localhost:8000
# Production: https://api.yourdomain.com
API_BASE_URL=http://localhost:8000

# CORS allowed origins (comma-separated)
# Development: defaults include localhost
# Production: must include your frontend domain(s)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# OAUTH PROVIDERS (Optional)
# =============================================================================

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# =============================================================================
# PAYMENT WEBHOOKS (Future Implementation)
# =============================================================================

# Stripe webhook secret
# STRIPE_WEBHOOK_SECRET=whsec_...

# Paystack webhook secret
# PAYSTACK_WEBHOOK_SECRET=...

# =============================================================================
# BUILD INFORMATION (Set during CI/CD)
# =============================================================================

# Build version (e.g., git tag or version number)
BUILD_VERSION=dev

# Git commit hash
BUILD_COMMIT=unknown

# Build timestamp
BUILD_TIME=

# =============================================================================
# FRONTEND ENVIRONMENT VARIABLES (Next.js)
# =============================================================================
# These must be set as NEXT_PUBLIC_* for client-side access
# Set in web-ui/.env.local or deployment platform

# NEXT_PUBLIC_API_URL=http://localhost:8000
