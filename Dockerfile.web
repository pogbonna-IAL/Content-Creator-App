# Multi-stage Dockerfile for Content Creation Crew Web UI
# Production-ready Next.js build

# Stage 1: Builder
FROM node:20-alpine as builder

WORKDIR /app

# Build argument for API URL
ARG NEXT_PUBLIC_API_URL=http://localhost:8000

# Copy package files explicitly
COPY web-ui/package.json web-ui/package-lock.json ./

# Install ALL dependencies (dev dependencies needed for Next.js build)
# Use --legacy-peer-deps to handle ESLint version conflict (eslint-config-next requires ESLint 8, but we have ESLint 9)
RUN npm ci --legacy-peer-deps || (echo "npm ci failed, trying npm install..." && npm install --legacy-peer-deps) && \
    npm cache clean --force

# Copy source code
COPY web-ui/ .

# Build application
# Set DOCKER_BUILD to allow localhost URLs during build (actual URL set at runtime)
ENV NEXT_TELEMETRY_DISABLED=1
ENV DOCKER_BUILD=true
ENV NEXT_PUBLIC_API_URL=${NEXT_PUBLIC_API_URL}

# Build with NODE_ENV=production
RUN NODE_ENV=production npm run build

# Stage 3: Runner
FROM node:20-alpine as runner

WORKDIR /app

ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1

# Create non-root user
RUN addgroup --system --gid 1001 nodejs && \
    adduser --system --uid 1001 nextjs

# Copy built application (standalone output)
COPY --from=builder --chown=nextjs:nodejs /app/.next/standalone ./
COPY --from=builder --chown=nextjs:nodejs /app/.next/static ./.next/static
COPY --from=builder --chown=nextjs:nodejs /app/public ./public

USER nextjs

# Expose port
EXPOSE 3000

ENV PORT=3000
ENV HOSTNAME="0.0.0.0"

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD node -e "require('http').get('http://localhost:3000/api/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})"

# Start application (standalone mode)
CMD ["node", "server.js"]

